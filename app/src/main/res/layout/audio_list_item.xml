<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="3dp"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/im_audio_item"
        android:src="@drawable/audio_default_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:padding="3dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_audio_item_name"
            android:layout_alignParentLeft="true"
            android:text="音乐名称"
            android:textSize="16sp"

            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_audio_item_author"
            android:layout_below="@id/tv_audio_item_name"
            android:text="演唱者名字"
            android:layout_width="wrap_content"
            android:textSize="14sp"

            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_audio_item_time"
            android:layout_below="@+id/tv_audio_item_name"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_audio_item_size"
            android:text="音乐时长"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_audio_item_size"
            android:layout_alignRight="@+id/tv_audio_item_name"
            android:layout_below="@+id/tv_audio_item_name"
            android:text="音乐大小"
            android:textSize="12sp"

            android:layout_marginRight="5dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</LinearLayout>






<!--视频列表 对应的listview 的一个条目-->