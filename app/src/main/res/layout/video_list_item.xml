<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="3dp"
    android:layout_width="match_parent"

    android:layout_height="60dp">


    <ImageView
        android:id="@+id/im_video_item"
        android:src="@drawable/video_default_icon"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <RelativeLayout
        android:padding="3dp"

        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_video_item_name"
            android:layout_toRightOf="@+id/im_video_item"
            android:text="视频名称"


            android:maxLines="1"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_video_item_time"
            android:layout_below="@+id/tv_video_item_name"
            android:text="视频时长"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_video_item_size"
            android:layout_alignRight="@+id/tv_video_item_name"
            android:layout_below="@+id/tv_video_item_name"
            android:text="视频大小"

            android:layout_marginRight="5dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</LinearLayout>






<!--视频列表 对应的listview 的一个条目-->